#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define DEFAULT 0
#define FN 1


//SPECIAL KEYS
#define m1_d &kp C_NEXT
#define m2_d &kp C_PP
#define m3_d &kp C_PREV


#define m1_fn &kp C_VOL_UP
#define m2_fn &kp C_MUTE
#define m3_fn &kp C_VOL_DN

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
// |      |  1  |  2  |  3  |  4  |  5  |  6  | SPC |    -    | BSPC |  7   |  8  |  9  |  0  |  -   |  =  |  m1  |
// | TAB  |  Q  |  W  |  E  |  R  |  T  |  Y  | CTRL|    -    | ENT  |  U   |  I  |  O  |  P  |  [   |  ]  |  m2  |
// | CTRL |  A  |  S  |  D  |  F  |  G  |  H  | UP  |    -    | RGT  |  J   |  K  |  L  |  ;  |  '   |  \  |  m3  |
// | SHFT |  Z  |  X  |  C  |  V  |  B  |  N  | DWN |    -    | LFT  |  M   |  ,  |  .  |  /  |  FN  | WIN | LALT |


                        bindings = <
   &studio_unlock    &kp N1  &kp N2  &kp N3  &kp N4  &kp N5  &kp N6  &kp SPACE 
   &kp TAB   &kp Q   &kp W   &kp E   &kp R   &kp T   &kp Y   &kp RCTRL        
   &mo fn_layer &kp A   &kp S   &kp D   &kp F   &kp G   &kp H   &kp UP           
   &kp LSHFT &kp Z   &kp X   &kp C   &kp V   &kp B   &kp N   &kp DOWN         
                        >;
                };
                fn_layer {
// -----------------------------------------------------------------------------------------
// |      |   F1   |   F2   |   F3   |   F4   |   F5   |  F6 |     |    -    |      |  F8  |  F9 | F10 | F11 | F12  |PSCRN|    |
// |BT_CLR|BT_SEL 0|BT_SEL 1|BT_SEL 2|BT_SEL 3|BT_SEL 4|     |     |    -    |      |      |     |     |     |      |     |    |
// |      |        |        |        |        |        |     |     |    -    |      |      |     |     |     |      |     |    |
// |      |        |        |        |        |        |     |     |    -    |      |      |     |     |     |      |     |    |

                        bindings = <
   &trans      &kp F1        &kp F2        &kp F3        &kp F4        &kp F5        &kp F6     
   &bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4  &trans     
   &kp LSHFT   &trans        &trans        &trans        &trans        &trans        &trans     
   &trans      &trans        &trans        &trans        &trans        &trans        &trans   
                        >;
                };
        };
};
